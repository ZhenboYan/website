---
interface Props {
  text: string;
}

const { text } = Astro.props;
---

<span class="section-label">{text}</span>

<style>
  .section-label {
    font-family: var(--font-body);
    font-size: 0.7rem;
    font-weight: 500;
    line-height: 1.4;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: var(--text-tertiary);
    display: block;
  }
</style>
