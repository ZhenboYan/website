---
interface Props {
  date: string;
  title: string;
  description: string;
  href: string;
}

const { date, title, description, href } = Astro.props;
---

<a href={href} class="writing-entry" target="_blank" rel="noopener noreferrer">
  <div class="writing-entry__inner">
    <div class="writing-entry__content">
      <span class="writing-entry__date">{date}</span>
      <h3 class="writing-entry__title">{title}</h3>
      <p class="writing-entry__description">{description}</p>
    </div>
    <span class="writing-entry__read">
      Read <span aria-hidden="true">&rarr;</span>
    </span>
  </div>
</a>

<style>
  .writing-entry {
    display: block;
    padding: 1.5rem 0;
    border-top: 1px solid var(--rule);
    transition: background-color var(--ease);
  }
  .writing-entry:hover {
    background-color: var(--accent-light);
  }
  .writing-entry__inner {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    gap: var(--space-lg);
  }
  .writing-entry__content {
    display: flex;
    flex-direction: column;
    gap: 0.35rem;
  }
  .writing-entry__date {
    font-size: 0.8rem;
    font-weight: 400;
    letter-spacing: 0.02em;
    color: var(--text-tertiary);
  }
  .writing-entry__title {
    font-family: var(--font-display);
    font-size: 1.35rem;
    font-weight: 400;
    color: var(--espresso);
    line-height: 1.3;
    transition: color var(--ease);
  }
  .writing-entry:hover .writing-entry__title {
    color: var(--accent);
  }
  .writing-entry__description {
    font-size: 0.9rem;
    color: var(--text-secondary);
    line-height: 1.65;
  }
  .writing-entry__read {
    flex-shrink: 0;
    font-size: 0.825rem;
    font-weight: 500;
    letter-spacing: 0.06em;
    text-transform: uppercase;
    color: var(--accent);
    white-space: nowrap;
    margin-top: 1.5rem;
  }

  @media (max-width: 768px) {
    .writing-entry__inner {
      flex-direction: column;
      gap: var(--space-sm);
    }
    .writing-entry__read {
      margin-top: 0;
    }
  }
</style>
