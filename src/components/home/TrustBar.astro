---
const items = [
  'Fulbright Scholar',
  'BCG BrightHouse',
  'Booz Allen Hamilton',
  '150K+ Community Members',
  '100+ Cities Worldwide',
];
---

<section class="trust-bar">
  <div class="container">
    <hr class="divider" />
  </div>
  <div class="trust-bar__marquee">
    <div class="trust-bar__track">
      {[0, 1, 2, 3].map(() => (
        <div class="trust-bar__set" aria-hidden="true">
          {items.map((item) => (
            <>
              <span class="trust-bar__item">{item}</span>
              <span class="trust-bar__dot" aria-hidden="true" />
            </>
          ))}
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .trust-bar {
    padding-top: var(--space-xl);
    padding-bottom: var(--space-2xl);
    overflow: hidden;
  }
  .trust-bar__marquee {
    padding-top: var(--space-xl);
    position: relative;
  }
  .trust-bar__track {
    display: flex;
    width: max-content;
    animation: marquee 30s linear infinite;
  }
  .trust-bar__set {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    padding-right: 1.5rem;
    flex-shrink: 0;
  }
  .trust-bar__item {
    font-size: 0.75rem;
    font-weight: 400;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--text-tertiary);
    white-space: nowrap;
  }
  .trust-bar__dot {
    width: 3px;
    height: 3px;
    border-radius: 50%;
    background-color: var(--text-tertiary);
    opacity: 0.4;
    flex-shrink: 0;
  }

  @keyframes marquee {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-25%);
    }
  }
</style>
