---
import BaseLayout from '../layouts/BaseLayout.astro';
import SectionLabel from '../components/common/SectionLabel.astro';
import CTALink from '../components/common/CTALink.astro';
import IntakeForm from '../components/work/IntakeForm.astro';
import { Image } from 'astro:assets';
import headerImg from '../assets/images/work_with_me1.png';
import advisoryImg from '../assets/images/work_with_me2.png';
import consultingImg from '../assets/images/work_with_me3.png';
---

<BaseLayout title="Work With Me — Catherine McMillan">

  <!-- Page Header — text left, image right -->
  <section class="page-header section">
    <div class="container page-header__grid">
      <div class="page-header__text">
        <SectionLabel text="Work With Me" />
        <h2 class="page-header__title">Let's build something that matters.</h2>
        <p class="page-header__subtext">
          I partner with startups and work one-on-one with individuals navigating
          inflection points in their careers. Here's how we can work together.
        </p>
      </div>
      <div class="page-header__visual">
        <Image src={headerImg} alt="Catherine speaking at a conference" />
      </div>
    </div>
  </section>

  <!-- Advisory (For Startups) — image left, text right -->
  <section class="offering offering--advisory section">
    <div class="container offering__grid offering__grid--reversed">
      <div class="offering__visual">
        <Image src={advisoryImg} alt="Catherine presenting to a group" />
      </div>
      <div class="offering__text">
        <span class="offering__accent-label">For Startups</span>
        <h3 class="offering__title">Strategic Advisory</h3>
        <p class="offering__paragraph">
          I work with early-stage AI startups as a strategic advisor.
        </p>
        <p class="offering__paragraph">
          My focus areas include go-to-market strategy, community-led growth,
          operational foundations, and the kind of pattern recognition that comes
          from sitting across the table from hundreds of founders.
        </p>
        <p class="offering__paragraph">
          If you're building something ambitious and want a thought partner who's
          been in the room, let's talk.
        </p>
        <CTALink href="#contact">Get in touch</CTALink>
      </div>
    </div>
  </section>

  <!-- Consulting (For Individuals) — text left, image right -->
  <section class="offering offering--consulting section">
    <div class="container offering__grid">
      <div class="offering__text">
        <span class="offering__accent-label">For Individuals</span>
        <h3 class="offering__title">Consulting</h3>
        <p class="offering__paragraph">
          For professionals navigating a transition — whether it's a career
          pivot, building a public presence, or figuring out how to position
          yourself in a fast-moving landscape.
        </p>
        <p class="offering__paragraph">
          Sessions are structured around your goals and can cover strategic
          positioning, personal brand, networking in AI, and making sense of
          what's next.
        </p>
        <CTALink href="#contact">Get in touch</CTALink>
      </div>
      <div class="offering__visual">
        <Image src={consultingImg} alt="Catherine collaborating with a group around a laptop" />
      </div>
    </div>
  </section>

  <hr class="divider container" />

  <!-- Intake Form + Closing Note -->
  <IntakeForm />

</BaseLayout>

<style>
  /* ── Page Header ── */
  .page-header {
    padding-top: 8rem;
    padding-bottom: 4rem;
    background-color: var(--bg);
  }
  .page-header__grid {
    display: grid;
    grid-template-columns: 3fr 2fr;
    gap: 5rem;
    align-items: center;
  }
  .page-header__text :global(.section-label) {
    margin-bottom: var(--space-md);
  }
  .page-header__title {
    font-family: var(--font-display);
    font-size: clamp(1.75rem, 3vw, 2.25rem);
    font-weight: 300;
    color: var(--espresso);
    max-width: 750px;
    line-height: 1.3;
  }
  .page-header__subtext {
    font-family: var(--font-body);
    font-size: 0.95rem;
    color: var(--text-secondary);
    max-width: 550px;
    margin-top: var(--space-sm);
    line-height: 1.7;
  }
  .page-header__visual {
    overflow: hidden;
    border-radius: 8px;
  }
  .page-header__visual :global(img) {
    width: 100%;
    height: 100%;
    aspect-ratio: 4 / 3;
    object-fit: cover;
    border-radius: 8px;
    display: block;
  }

  /* ── Shared Offering Styles ── */
  .offering__grid {
    display: grid;
    grid-template-columns: 3fr 2fr;
    gap: 5rem;
    align-items: center;
  }
  .offering__grid--reversed {
    grid-template-columns: 2fr 3fr;
  }
  .offering__accent-label {
    font-family: var(--font-body);
    font-size: 0.7rem;
    font-weight: 500;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: var(--accent);
    display: block;
    margin-bottom: var(--space-sm);
  }
  .offering__title {
    font-family: var(--font-display);
    font-size: clamp(1.5rem, 2.5vw, 1.85rem);
    font-weight: 400;
    color: var(--espresso);
    margin-bottom: var(--space-md);
    line-height: 1.3;
  }
  .offering__paragraph {
    font-size: 0.95rem;
    color: var(--text-secondary);
    line-height: 1.7;
    margin-bottom: var(--space-sm);
  }
  .offering__text :global(.cta-link) {
    margin-top: var(--space-md);
  }
  .offering__visual {
    overflow: hidden;
    border-radius: 8px;
  }
  .offering__visual :global(img) {
    width: 100%;
    height: 100%;
    aspect-ratio: 4 / 3;
    object-fit: cover;
    border-radius: 8px;
    display: block;
  }

  /* ── Section Backgrounds (alternating: bg → bg-warm → bg) ── */
  .offering--advisory {
    background-color: var(--bg-warm);
  }
  .offering--consulting {
    background-color: var(--bg);
  }

  /* ── Responsive ── */
  @media (max-width: 768px) {
    .page-header {
      padding-top: 6rem;
      padding-bottom: 3rem;
    }
    .page-header__grid,
    .offering__grid,
    .offering__grid--reversed {
      grid-template-columns: 1fr;
      gap: var(--space-lg);
    }
    .page-header__visual,
    .offering__visual {
      display: none;
    }
  }
</style>
