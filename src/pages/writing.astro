---
import BaseLayout from '../layouts/BaseLayout.astro';
import SectionLabel from '../components/common/SectionLabel.astro';
import Parser from 'rss-parser';

// Fetch Medium RSS feed at build time
const parser = new Parser();
let articles: { title: string; link: string; date: string; excerpt: string }[] = [];

try {
  const feed = await parser.parseURL('https://medium.com/feed/@catherine-mcmillan');
  articles = (feed.items || []).map((item) => {
    // Strip HTML tags from content snippet for excerpt
    const raw = item['content:encodedSnippet'] || item.contentSnippet || '';
    const excerpt = raw.replace(/<[^>]*>/g, '').slice(0, 200).trim();
    return {
      title: item.title || '',
      link: item.link || '',
      date: item.pubDate
        ? new Date(item.pubDate).toLocaleDateString('en-US', { month: 'long', year: 'numeric' })
        : '',
      excerpt: excerpt.length >= 200 ? excerpt + '…' : excerpt,
    };
  });
} catch (e) {
  console.error('Failed to fetch Medium feed:', e);
}

const featured = articles[0];
const rest = articles.slice(1);
---

<BaseLayout title="Writing — Catherine McMillan">

  <!-- 9a: Page Header -->
  <section class="page-header section">
    <div class="container">
      <SectionLabel text="Writing" />
      <h2 class="page-header__title">
        Selected essays, analysis, and things I'm thinking about.
      </h2>
      <p class="page-header__subtext">
        I write regularly on <a href="https://medium.com/@catherine-mcmillan" target="_blank" rel="noopener noreferrer" class="page-header__link">Medium</a> about AI, community, and the future of work.
      </p>
    </div>
  </section>

  <!-- 9b: Featured Piece -->
  {featured && (
    <section class="featured section">
      <div class="container">
        <a href={featured.link} target="_blank" rel="noopener noreferrer" class="featured__card">
          <span class="featured__label">Featured</span>
          <h3 class="featured__title">{featured.title}</h3>
          <p class="featured__excerpt">{featured.excerpt}</p>
          <div class="featured__meta">
            <span class="featured__date">{featured.date}</span>
            <span class="featured__cta">Read on Medium &rarr;</span>
          </div>
        </a>
      </div>
    </section>
  )}

  <!-- 9c: Writing List -->
  <section class="writing-list section">
    <div class="container writing-list__inner">
      {rest.map((article) => (
        <a href={article.link} target="_blank" rel="noopener noreferrer" class="writing-entry">
          <span class="writing-entry__date">{article.date}</span>
          <h3 class="writing-entry__title">{article.title}</h3>
          <div class="writing-entry__row">
            <p class="writing-entry__desc">{article.excerpt}</p>
            <span class="writing-entry__cta">Read &rarr;</span>
          </div>
        </a>
      ))}
      <div class="writing-list__archive">
        <a href="https://medium.com/@catherine-mcmillan" target="_blank" rel="noopener noreferrer" class="writing-list__archive-link">
          View full archive on Medium &rarr;
        </a>
      </div>
    </div>
  </section>

</BaseLayout>

<style>
  /* ── 9a: Page Header ── */
  .page-header {
    padding-top: 8rem;
    padding-bottom: 4rem;
    background-color: var(--bg);
  }
  .page-header :global(.section-label) {
    margin-bottom: var(--space-md);
  }
  .page-header__title {
    font-family: var(--font-display);
    font-size: clamp(1.75rem, 3vw, 2.25rem);
    font-weight: 300;
    color: var(--espresso);
    max-width: 700px;
    line-height: 1.3;
  }
  .page-header__subtext {
    font-family: var(--font-body);
    font-size: 0.95rem;
    color: var(--text-secondary);
    margin-top: var(--space-sm);
    line-height: 1.7;
  }
  .page-header__link {
    color: var(--accent);
    text-decoration: none;
    transition: color var(--ease);
  }
  .page-header__link:hover {
    color: var(--accent-hover);
  }

  /* ── 9b: Featured Piece ── */
  .featured {
    background-color: var(--bg);
    padding-top: 0;
  }
  .featured__card {
    display: block;
    background-color: var(--bg-warm);
    padding: 3rem;
    border-radius: 4px;
    text-decoration: none;
    transition: background-color var(--ease);
  }
  .featured__card:hover {
    background-color: var(--accent-light);
  }
  .featured__label {
    font-family: var(--font-body);
    font-size: 0.7rem;
    font-weight: 500;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: var(--accent);
    display: block;
    margin-bottom: var(--space-sm);
  }
  .featured__title {
    font-family: var(--font-display);
    font-size: 1.5rem;
    font-weight: 400;
    color: var(--espresso);
    line-height: 1.3;
    margin-bottom: var(--space-sm);
    transition: color var(--ease);
  }
  .featured__card:hover .featured__title {
    color: var(--accent);
  }
  .featured__excerpt {
    font-family: var(--font-body);
    font-size: 0.95rem;
    color: var(--text-secondary);
    line-height: 1.7;
    max-width: 700px;
    margin-bottom: var(--space-md);
  }
  .featured__meta {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  .featured__date {
    font-family: var(--font-body);
    font-size: 0.75rem;
    font-weight: 500;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--text-tertiary);
  }
  .featured__cta {
    font-family: var(--font-body);
    font-size: 0.825rem;
    font-weight: 500;
    letter-spacing: 0.06em;
    text-transform: uppercase;
    color: var(--accent);
  }

  /* ── 9c: Writing List ── */
  .writing-list {
    background-color: var(--bg);
  }
  .writing-list__inner {
    max-width: 900px;
    margin-inline: auto;
  }
  .writing-entry {
    display: block;
    border-top: 1px solid var(--rule);
    padding: 1.5rem 0;
    text-decoration: none;
    transition: background-color var(--ease);
    padding-inline: 1rem;
    margin-inline: -1rem;
    border-radius: 2px;
  }
  .writing-entry:last-of-type {
    border-bottom: 1px solid var(--rule);
  }
  .writing-entry:hover {
    background-color: var(--accent-light);
  }
  .writing-entry__date {
    font-family: var(--font-body);
    font-size: 0.75rem;
    font-weight: 500;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--text-tertiary);
    display: block;
    margin-bottom: 0.35rem;
  }
  .writing-entry__title {
    font-family: var(--font-display);
    font-size: 1.35rem;
    font-weight: 400;
    color: var(--espresso);
    line-height: 1.3;
    margin-bottom: 0.5rem;
    transition: color var(--ease);
  }
  .writing-entry:hover .writing-entry__title {
    color: var(--accent);
  }
  .writing-entry__row {
    display: flex;
    align-items: baseline;
    justify-content: space-between;
    gap: var(--space-md);
  }
  .writing-entry__desc {
    font-family: var(--font-body);
    font-size: 0.9rem;
    color: var(--text-secondary);
    line-height: 1.6;
    flex: 1;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }
  .writing-entry__cta {
    font-family: var(--font-body);
    font-size: 0.825rem;
    font-weight: 500;
    letter-spacing: 0.06em;
    text-transform: uppercase;
    color: var(--accent);
    white-space: nowrap;
    flex-shrink: 0;
  }

  /* Archive link */
  .writing-list__archive {
    text-align: center;
    margin-top: var(--space-xl);
  }
  .writing-list__archive-link {
    font-family: var(--font-body);
    font-size: 0.825rem;
    font-weight: 500;
    letter-spacing: 0.06em;
    text-transform: uppercase;
    color: var(--text-tertiary);
    text-decoration: none;
    transition: color var(--ease);
  }
  .writing-list__archive-link:hover {
    color: var(--accent);
  }

  /* ── Responsive ── */
  @media (max-width: 768px) {
    .page-header {
      padding-top: 6rem;
      padding-bottom: 3rem;
    }
    .featured__card {
      padding: 2rem;
    }
    .featured__meta {
      flex-direction: column;
      align-items: flex-start;
      gap: var(--space-sm);
    }
    .writing-entry__row {
      flex-direction: column;
      gap: 0.5rem;
    }
    .writing-entry__desc {
      white-space: normal;
    }
  }
</style>
