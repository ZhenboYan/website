---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/home/Hero.astro';
---

<BaseLayout title="Catherine McMillan â€” Advisor, Consultant, Community Builder">
  <Hero />

</BaseLayout>

<style>
  .pathways {
    padding-bottom: 0;
  }
  .pathways :global(.section-label) {
    margin-bottom: 3.5rem;
  }
  .pathways__grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
  }
  .pathways__grid > :global(:not(:last-child)) {
    border-right: 1px solid var(--rule);
    padding-right: 2.5rem;
  }
  .pathways__grid > :global(:not(:first-child)) {
    padding-left: 2.5rem;
  }

  @media (max-width: 768px) {
    .pathways__grid {
      grid-template-columns: 1fr;
    }
    .pathways__grid > :global(:not(:last-child)) {
      border-right: none;
      border-bottom: 1px solid var(--rule);
      padding-right: 0;
    }
    .pathways__grid > :global(:not(:first-child)) {
      padding-left: 0;
    }
  }
</style>
