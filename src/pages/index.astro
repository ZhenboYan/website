---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/home/Hero.astro';
import SectionLabel from '../components/common/SectionLabel.astro';
import PathwayCard from '../components/home/PathwayCard.astro';
import TrustBar from '../components/home/TrustBar.astro';
import ClosingCTA from '../components/home/ClosingCTA.astro';
---

<BaseLayout title="Catherine McMillan â€” Advisor, Consultant, Community Builder">
  <Hero />

  <section class="pathways section container">
    <SectionLabel text="How I Can Help" />
    <div class="pathways__grid">
      <PathwayCard
        number="01"
        title="Strategic Advisory"
        description="Partnerships with early-stage AI startups. I help founders with go-to-market strategy, community building, and operational clarity."
        href="/work-with-me"
        linkText=""
      />
      <PathwayCard
        number="02"
        title="Consulting"
        description="For professionals navigating career transitions, public presence, and strategic positioning in the AI landscape."
        href="/work-with-me"
        linkText=""
      />
      <PathwayCard
        number="03"
        title="Community & Events"
        description="Curated gatherings, roundtables, and intimate dinners bringing together founders, researchers, and investors across 100+ cities."
        href="/events"
        linkText="See upcoming events"
      />
    </div>
  </section>

  <TrustBar />

  <ClosingCTA />

</BaseLayout>

<style>
  .pathways {
    padding-bottom: 0;
  }
  .pathways :global(.section-label) {
    margin-bottom: 3.5rem;
  }
  .pathways__grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
  }
  .pathways__grid > :global(:not(:last-child)) {
    border-right: 1px solid var(--rule);
    padding-right: 2.5rem;
  }
  .pathways__grid > :global(:not(:first-child)) {
    padding-left: 2.5rem;
  }

  @media (max-width: 768px) {
    .pathways__grid {
      grid-template-columns: 1fr;
    }
    .pathways__grid > :global(:not(:last-child)) {
      border-right: none;
      border-bottom: 1px solid var(--rule);
      padding-right: 0;
    }
    .pathways__grid > :global(:not(:first-child)) {
      padding-left: 0;
    }
  }
</style>
